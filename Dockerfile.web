# ============================================
# NEXT.JS WEB APPLICATION
# ============================================
# Multi-stage: development + production
# ============================================

FROM node:20-alpine AS base
RUN corepack enable && corepack prepare pnpm@9.15.0 --activate

# ============================================
# DEVELOPMENT TARGET
# ============================================
FROM base AS development
WORKDIR /app

# Install netcat for DB health checks and pg for migrations
RUN apk add --no-cache netcat-openbsd

# Copy package files
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./
COPY apps/web/package.json ./apps/web/
COPY packages/config/package.json ./packages/config/
COPY packages/types/package.json ./packages/types/

# Install all dependencies (including pg for migrations)
RUN pnpm install --frozen-lockfile && pnpm add pg --ignore-workspace

# Copy migrations and entrypoint for automatic migration on startup
COPY supabase/migrations ./supabase/migrations
COPY docker/migrate.js ./docker/migrate.js
COPY docker/entrypoint-dev.sh ./docker/entrypoint-dev.sh
RUN chmod +x /app/docker/entrypoint-dev.sh

# Source code mounted via volume
EXPOSE 4000
ENTRYPOINT ["/app/docker/entrypoint-dev.sh"]

# ============================================
# PRODUCTION TARGET
# ============================================
FROM base AS deps
WORKDIR /app
COPY package.json pnpm-workspace.yaml pnpm-lock.yaml* ./
COPY apps/web/package.json ./apps/web/
COPY packages/config/package.json ./packages/config/
COPY packages/types/package.json ./packages/types/
RUN pnpm install --frozen-lockfile

FROM base AS builder
WORKDIR /app
COPY --from=deps /app/node_modules ./node_modules
COPY --from=deps /app/apps/web/node_modules ./apps/web/node_modules
COPY --from=deps /app/packages/config/node_modules ./packages/config/node_modules
COPY --from=deps /app/packages/types/node_modules ./packages/types/node_modules
COPY . .

# Build-time arguments for NEXT_PUBLIC_* variables
# These are passed via docker build --build-arg from CI/CD workflow
ARG NEXT_PUBLIC_SUPABASE_URL
ARG NEXT_PUBLIC_SUPABASE_ANON_KEY
ARG NEXT_PUBLIC_ENABLE_TURNSTILE
ARG NEXT_PUBLIC_TURNSTILE_SITE_KEY
ARG NEXT_PUBLIC_TURNSTILE_PROTECTED_ACTIONS
ARG NEXT_PUBLIC_POSTHOG_KEY
ARG NEXT_PUBLIC_POSTHOG_HOST

# Convert build args to environment variables for Next.js build
ENV NEXT_PUBLIC_SUPABASE_URL=$NEXT_PUBLIC_SUPABASE_URL
ENV NEXT_PUBLIC_SUPABASE_ANON_KEY=$NEXT_PUBLIC_SUPABASE_ANON_KEY
ENV NEXT_PUBLIC_ENABLE_TURNSTILE=$NEXT_PUBLIC_ENABLE_TURNSTILE
ENV NEXT_PUBLIC_TURNSTILE_SITE_KEY=$NEXT_PUBLIC_TURNSTILE_SITE_KEY
ENV NEXT_PUBLIC_TURNSTILE_PROTECTED_ACTIONS=$NEXT_PUBLIC_TURNSTILE_PROTECTED_ACTIONS
ENV NEXT_PUBLIC_POSTHOG_KEY=$NEXT_PUBLIC_POSTHOG_KEY
ENV NEXT_PUBLIC_POSTHOG_HOST=$NEXT_PUBLIC_POSTHOG_HOST

# Also copy deployment.env as .env.production for additional variables
# This provides full environment config beyond just NEXT_PUBLIC_* vars
COPY deployment.env apps/web/.env.production

ENV NEXT_TELEMETRY_DISABLED=1
RUN pnpm --filter @atlasp2p/web build

FROM base AS production
WORKDIR /app
ENV NODE_ENV=production
ENV NEXT_TELEMETRY_DISABLED=1

# Install netcat for health checks and pg for migrations
RUN apk add --no-cache netcat-openbsd && \
    pnpm add pg --ignore-workspace

RUN addgroup --system --gid 1001 nodejs && \
    adduser --system --uid 1001 nextjs

# Install pg for migrations (standalone doesn't include it)
RUN pnpm add pg --ignore-workspace

COPY --from=builder --chown=nextjs:nodejs /app/apps/web/public ./apps/web/public
# Create avatars directory for local file storage (used when Supabase Storage unavailable)
RUN mkdir -p ./apps/web/public/avatars && chown -R nextjs:nodejs ./apps/web/public
COPY --from=builder --chown=nextjs:nodejs /app/apps/web/.next/standalone ./
COPY --from=builder --chown=nextjs:nodejs /app/apps/web/.next/static ./apps/web/.next/static
COPY --from=builder --chown=nextjs:nodejs /app/supabase/migrations ./supabase/migrations
COPY --chown=nextjs:nodejs docker/migrate.js ./migrate.js
COPY --chown=nextjs:nodejs docker/entrypoint.sh ./entrypoint.sh
RUN chmod +x /app/entrypoint.sh

USER nextjs
EXPOSE 3000
ENV PORT=3000
ENTRYPOINT ["/app/entrypoint.sh"]
